def reverse_array(arr):
  # Create a stack to hold the elements 
  stack = [] 
  
  # Push each element of the array into the stack 
  for elem in arr:
    stack.append(elem) 
  
  # Create a new array to store the reversed elements 
  reversed_arr = [] 
  
  # Pop each element from the stack and add to the new array 
  while len(stack) > 0:
    reversed_arr.append(stack.pop()) 
  
  # Return the new array 
  return reversed_arr 

arr = [1, 2, 3, 4, 5] 
print(reverse_array(arr))  # [5, 4, 3, 2, 1]
